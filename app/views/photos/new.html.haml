= render "shared/header"
.content
  NEW POST
= form_for @photo do |f|
  .field
    アイコンをクリックして写真を選択
    %br/
    = f.label :image, class: 'input' do
      = fa_icon 'picture-o', class: 'icon'
      = f.file_field :image, class: 'hidden', accept: "image/*"
      = render partial: '/photos/photo-error-messages', locals: {user: @photo, column: "image"}
    %br/
  .field
    タイトル
    %br/
    = f.text_field :title, class: 'input', placeholder: '(例）写真旅', maxlength: "20"
    = render partial: '/photos/photo-error-messages', locals: {user: @photo, column: "title"}
  .field
    詳細
    %br/
    = f.text_area :explanation, class: 'input-explanation', placeholder: '写真の思い出を書いてください'
  .actions
    = f.submit '投稿', class: 'new-post-submit-btn'

